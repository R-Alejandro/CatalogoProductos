@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Registro</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #36b9cc, #4e73df);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .register-card {
            width: 100%;
            max-width: 420px;
            border-radius: 15px;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #36b9cc;
        }

        .btn-custom {
            background-color: #36b9cc;
            color: white;
        }

        .btn-custom:hover {
            background-color: #2c9faf;
        }
    </style>
</head>
<body>

    <div class="card shadow-lg register-card">
        <div class="card-body p-4">
            <h3 class="text-center mb-4">Crear Cuenta</h3>

            <form method="post">

                <div class="mb-3">
                    <label class="form-label">Nombre</label>
                    <input name="name" class="form-control" placeholder="Ingresa tu nombre" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Nickname</label>
                    <input name="username" class="form-control" placeholder="Elige un usuario" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" placeholder="Crea una contraseña" required />
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center">
                        @ViewBag.Error
                    </div>
                }

                <div class="d-grid">
                    <button class="btn btn-custom">Registrarme</button>
                </div>
            </form>

            <div class="text-center mt-3">
                <small>
                    ¿Ya tienes cuenta?
                    <a href="/Account/Login" class="text-decoration-none fw-bold">
                        Inicia Sesion
                    </a>
                </small>
            </div>
        </div>
    </div>

</body>
</html>