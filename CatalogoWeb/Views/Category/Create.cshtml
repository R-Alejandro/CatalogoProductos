@model Category

@{
    ViewData["Title"] = "Crear Categoria";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2>Crear Nueva Categoria</h2>
            <hr />

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <h5>Errores en el formulario:</h5>
                    @Html.ValidationSummary(false)
                </div>
            }

            <form asp-action="Create" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Nombre de la Categoria</label>
                    <input asp-for="Name" class="form-control" placeholder="Ej: Electronica">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Crear Categoria
                    </button>
                    <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}